{
	"name": "minecraft-action-logger",
	"version": "1.0.0",
	"description": "プレイヤーの行動を記録して表示するMinecraftアドオン",
	"scripts": {
		"build": "tsc -p tsconfig.json && node scripts/build.mjs && node scripts/makeZip.mjs",
		"watch": "tsc -w -p tsconfig.json",
		"clean": "rimraf scripts scripts.zip",
		"package": "npm run build && node dist/scripts/build.js",
		"dev": "npm run clean && npm run build && npm run watch",
		"make-zip": "node scripts/makeZip.mjs"
	},
	"keywords": [
		"minecraft",
		"bedrock",
		"addon",
		"typescript"
	],
	"author": "terao-ryohei",
	"license": "MIT",
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@types/archiver": "^6.0.3",
		"@types/node": "^22.14.1",
		"archiver": "^7.0.1",
		"rimraf": "^6.0.1",
		"typescript": "^5.8.3",
		"zip-a-folder": "^3.1.9"
	},
	"engines": {
		"node": ">=16.0.0"
	},
	"private": true,
	"minecraft": {
		"minEngineVersion": [
			1,
			20,
			0
		]
	},
	"dependencies": {
		"@minecraft/server": "^1.18.0",
		"@minecraft/server-ui": "^1.3.0"
	}
}